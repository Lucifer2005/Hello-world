# get the number from the user
num = int(input("n: "))

# get the number of digits
digits = len(str(num))

# initialize the sum of powers
sum = 0

# loop over each digit
for digit in str(num):
    # add the power of the digit to the sum
    sum += int(digit) ** digits
print("sum of powers: ",sum)
# check if the number is equal to the sum
if num == sum:
    # print that the number is an Armstrong number
    print("armstrong number")
else:
    # print that the number is not an Armstrong number
    print("not Armstrong number")
